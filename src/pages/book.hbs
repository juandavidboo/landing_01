{{#> layouts/_Layout mlr="076-6052-PM 12/21"}}
{{#*inline "header-block"}}
	<title>Receive your copy</title>
	<meta name="description" content="" />
	<link rel="canonical" href="" />
{{/inline}}

{{#*inline "body-block"}}

<div class="main-content">
<div class="container section">
	<div class="row">
	<div class="col-xs-12 col-sm-10">
		<div class="header">
			<h1 class="short-bottom-margin color-3">Get your copy of <span class="color-1"><em>ASCO Answers: Cancer Survivorship</em></span>.</h1>
			<div>
				<p>It’s important that you have as much guidance and support on your journey as possible. To receive your copy of this guidebook, please enter your address below. </p>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-2"></div>
	</div>
</div>
<div class="container section large-width">
	<div class="row">
		<div class="col-xs-12 col-sm-6">
		
			<div class="form-wrapper">
				<form method="post" name="book-signup-form">
					<span class="instruction">*Required</span>
					
					<div class="book-fieldset paddingBottom-0">
						
						<label class="input-wrapper" for="first-name">First Name*
							<input class="book-input" type="text" id="first-name" name="first-name" required>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="first-name-error">
								This field is required.
							</div> --}}
						</label>
						<label class="input-wrapper" for="last-name">Last Name*
							<input class="book-input" type="text" id="last-name" name="last-name" required>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="last-name-error">
								This field is required.
							</div> --}}
						</label>
						<label class="input-wrapper" for="email-address">Email Address*
							<input class="book-input" type="email" id="email-address" name="email-address" required>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="email-address-error">
								Please enter a valid email, e.g. example@domain.com
							</div> --}}
						</label>
						<label class="input-wrapper" for="street-address">Street Address*
							<input class="book-input" type="text" id="street-address" name="street-address" required>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="street-address-error">
								This field is required.
							</div> --}}
						</label>
						<label class="input-wrapper" for="apt-suite">Apartment/Building/Suite
							<input class="book-input" type="text" id="apt-suite" name="apt-suite">
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="apt-suite-error">
								
							</div> --}}
						</label>
						<label class="input-wrapper" for="city">City*
							<input class="book-input" type="text" id="city" name="city" required>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="city-error">
								This field is required.
							</div> --}}
						</label>
						<label class="input-wrapper input-wrapper-col-1" for="state">State*
							<select class="book-input small-input" id="state" name="state" required>
								<option disabled selected value> </option>
								<option value="Alabama">Alabama</option>
								<option value="Alaska">Alaska</option>
								<option value="Arizona">Arizona</option>
							</select>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="state-error">
								Please select your state.
							</div> --}}
						</label>
						<label class="input-wrapper input-wrapper-col-2" for="pcode">ZIP Code*
							<input class="book-input small-input" type="text" id="pcode" name="pcode" required>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="pcode-error">
								This field is required.
							</div> --}}
						</label>
						<label class="input-wrapper" for="phone">Phone Number*
							<input class="book-input small-input" type="tel" id="phone" name="phone" required>
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="phone-error">
								Please enter a valid phone number, e.g., 123-456-7890.
							</div> --}}
						</label>
						
						<label class="input-wrapper checkbox-18-over" for="18-older">
							<span class="label-text">I am 18 years of age<span class="color-3">*</span></span>
							<input class="book-input-checkbox" type="checkbox" name="18-older" id="18-older" required>
							<span class="checkmark"></span>
							
							{{!-- Add/remove 'error' class to 'required-email' id --}}
							{{!-- <div class="message" id="18-older-error">
								Please check this box to continue.
							</div> --}}
							
							<div class="tooltip"><img src="../img/icon-info.svg" width="22">
								<span class="tooltiptext">We need you to acknowledge<br> that you are 18 years or older.</span>
							</div>
							<span class="error-placer"></span>
						</label>
					</div>					

					<div class=""><button class="button">Submit</button></div>

				</form>
			</div>	
		</div>
		
		<div class="col-xs-12 col-sm-5">
			<div class="aside-wrapper">
				<img class="content-img" src="../img/img-ASCO-book.jpg" alt="Healthy Eating Cookbook" width="201">
				<div class="content-text">
					<h2 class="large-bottom-margin color-4">What’s in the book?</h2>
					<p class="small">In this book, the American Society of Clinical Oncology provides information and tips so that you can:</p>
					<ul>
						<li>Be prepared with questions to ask your doctor about ongoing and follow-up care</li>
						<li>Learn about the steps in the journey of survivorship and treatment</li>
						<li>Understand the challenges of survivorship and the different ways to create a support plan that works for you</li>
					</ul>
				</div>
			</div>	
		</div>
		<div class="col-xs-12 col-sm-1"></div>
	</div>
</div>
</div>

{{/inline}}

{{#*inline "scripts-block"}}
	<script type="text/javascript" src="../js/cookbook.js"></script>
{{/inline}}
